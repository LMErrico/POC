<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Menu:</h3>

    <form class="form new-menu-form">
      <div class="form-group">
        <label for="menu-name">menu name:</label>
        <input class="form-input" type="text" id="menu-name" name="menu-name" />
      </div>
      <div class="form-group">
        <label for="menu-price">price ($):</label>
        <input class="form-input" type="number" id="menu-price" name="menu-price" />
      </div>
      <div class="form-group">
        <label for="menu-desc">description:</label>
        <textarea class="form-input" id="menu-desc" name="menu-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="menu-ingre">ingredients:</label>
        <textarea class="form-input" id="menu-ingre" name="menu-ingre"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if menus.length}}
  <div class="col-md-6 menu-list">
    <h3>Current Menus:</h3>

    {{#each menus as |menu|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/menu/{{menu.id}}">{{menu.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{menu.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/menuAdmin.js"></script>
